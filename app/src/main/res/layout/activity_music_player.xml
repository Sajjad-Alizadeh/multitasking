    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/music_player_background" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/music_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/white"

            />

    </com.google.android.material.appbar.AppBarLayout>

    <SeekBar
        android:id="@+id/seek_bar_music_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/standard_margin_x2"
        android:layout_marginEnd="@dimen/standard_margin_x2"
        android:layout_marginBottom="@dimen/standard_margin_x2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/seek_bar_music_player"
        android:layout_marginBottom="@dimen/standard_margin"
        android:padding="@dimen/standard_margin">

        <ImageView
            android:id="@+id/imv_play_music"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_play_background"
            android:foreground="?attr/selectableItemBackground"
            android:padding="13dp"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/imv_rewind_music"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/standard_margin_x2"
            android:layout_toStartOf="@id/imv_play_music"
            android:src="@drawable/ic_fast_rewind_black_48dp" />

        <ImageView
            android:id="@+id/imv_forward_music"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/standard_margin_x2"
            android:layout_toEndOf="@id/imv_play_music"
            android:src="@drawable/ic_fast_forward_black_48dp" />

        <TextView
            android:id="@+id/txt_current_music_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:05" />

        <TextView
            android:id="@+id/txt_music_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="05:15" />
    </RelativeLayout>

</RelativeLayout>